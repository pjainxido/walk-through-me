{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@containers/*": ["containers/*"],
      "@modules/*": ["modules/*"],
      "@scenes/*": ["scenes/*"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"]
    },
    "strict": true,
    "jsx": "react-native",
    "noEmit": true,
    "target": "es6"
  },
  "types": ["styled-components-react-native"],
  "exclude": ["node_modules", "babel.config.js"]
}
